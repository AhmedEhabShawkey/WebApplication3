<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />

</head>
<body>
    @* Start Header*@
    <nav class="mt-5">
        <center>
            <a class=" btn btn-primary" asp-controller="Home" asp-action="Index">Home </a>
            <a class=" btn btn-secondary" asp-controller="Home" asp-action="AboutUs">AboutUs </a>
            <a class=" btn btn-success" asp-controller="Home" asp-action="ContactUs">ContactUs </a>
            <a class=" btn btn-warning" asp-controller="Home" asp-action="Privacy">Privacy </a>
            <a class=" btn btn-danger" asp-controller="Account" asp-action="Login">Login </a>
            <a class=" btn btn-info" asp-controller="Account" asp-action="Register">Register </a>
        </center>
    </nav>

    @* End Header*@
    <div>
        @RenderBody()
    </div>
    @* Start Footer*@
    <footer class="mt-5">
        <centre>
            <div>
                <p> CopyRights &copy; Route  @DateTime.Now.Year</p>
            </div>
        </centre>
    </footer>
    @* End Footer*@
</body>
</html>
